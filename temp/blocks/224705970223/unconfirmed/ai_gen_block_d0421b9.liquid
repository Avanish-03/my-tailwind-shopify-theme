{% doc %}
  @prompt
    create a feature section which contains  like static details image title subtile in one row 4 blocks
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-features-section-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-features-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-features-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: {{ block.settings.gap }}px;
  }

  .ai-feature-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: {{ block.settings.alignment }};
    text-align: {{ block.settings.alignment }};
  }

  .ai-feature-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    margin-bottom: {{ block.settings.image_spacing }}px;
  }

  .ai-feature-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-feature-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1 / 1;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-feature-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-feature-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px;
  }

  .ai-feature-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    line-height: 1.5;
  }

  @media screen and (max-width: 989px) {
    .ai-features-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-features-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-feature-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-feature-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<ai-features-section-{{ ai_gen_id }} class="ai-features-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-features-container-{{ ai_gen_id }}">
    <div class="ai-features-grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign image_key = 'feature_' | append: i | append: '_image'
          assign title_key = 'feature_' | append: i | append: '_title'
          assign subtitle_key = 'feature_' | append: i | append: '_subtitle'
          
          assign feature_image = block.settings[image_key]
          assign feature_title = block.settings[title_key]
          assign feature_subtitle = block.settings[subtitle_key]
        %}
        
        <div class="ai-feature-item-{{ ai_gen_id }}">
          <div class="ai-feature-image-wrapper-{{ ai_gen_id }}">
            {% if feature_image %}
              <img
                src="{{ feature_image | image_url: width: 600 }}"
                alt="{{ feature_image.alt | escape }}"
                loading="lazy"
                width="{{ feature_image.width }}"
                height="{{ feature_image.height }}"
                class="ai-feature-image-{{ ai_gen_id }}"
              >
            {% else %}
              <div class="ai-feature-image-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
          
          {% if feature_title != blank %}
            <h3 class="ai-feature-title-{{ ai_gen_id }}">{{ feature_title }}</h3>
          {% endif %}
          
          {% if feature_subtitle != blank %}
            <p class="ai-feature-subtitle-{{ ai_gen_id }}">{{ feature_subtitle }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</ai-features-section-{{ ai_gen_id }}>

<script>
  (function() {
    class AiFeaturesSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('ai-features-section-{{ ai_gen_id }}', AiFeaturesSection{{ ai_gen_id }});
  })();
</script>

