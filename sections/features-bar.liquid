<section class="border-t border-b bg-white">
  <div class="max-w-7xl mx-auto px-10 py-10">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">

      {% for block in section.blocks %}
        <div class="flex items-start gap-4">
          
          <!-- ICON -->
          <div class="shrink-0 text-black">
            {{ block.settings.icon }}
          </div>

          <!-- TEXT -->
          <div>
            <h3 class="text-base font-semibold mb-1">
              {{ block.settings.title }}
            </h3>
            <p class="text-sm text-gray-500">
              {{ block.settings.subtitle }}
            </p>
          </div>

        </div>
      {% endfor %}

    </div>
  </div>
</section>

{% schema %}
{
  "name": "Features Bar",
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Item",
      "settings": [
        {
          "type": "html",
          "id": "icon",
          "label": "Icon (SVG)",
          "default": "<svg xmlns='http://www.w3.org/2000/svg' width='32' height='32' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round'><path d='M3 7h13l4 5v6a2 2 0 0 1-2 2h-1'/><path d='M3 7v11a2 2 0 0 0 2 2h2'/><circle cx='7' cy='19' r='2'/><circle cx='17' cy='19' r='2'/></svg>"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Worldwide Shipping"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "For all Orders Over $100"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features Bar",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}
