<section class="w-full">
  <div class="grid grid-cols-1 md:grid-cols-2 items-center">

    <!-- TEXT -->
    <div class="p-16">
      <p class="text-sm uppercase tracking-widest mb-4">
        This Weekâ€™s Highlights
      </p>

      <h1 class="text-5xl font-light leading-tight mb-6">
        Woman In Golden Rings <br>
        And Necklaces
      </h1>

      <p class="text-gray-600 mb-8">
        Awesome products for the dynamic urban lifestyle
      </p>

      <a
        href="/collections/all"
        class="inline-block px-8 py-3 bg-black text-white text-sm uppercase tracking-wide"
      >
        Shop Now
      </a>
    </div>

    <!-- IMAGE -->
    <div>
      {% if section.settings.image != blank %}
        <img
          src="{{ section.settings.image | image_url: width: 1200 }}"
          class="w-full h-full object-cover"
        >
      {% endif %}
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    }
  ]
}
{% endschema %}
