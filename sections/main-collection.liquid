<section class="mt-20">
  <div class="text-center py-10">
    {% if product.featured_image %}
      <img
        src="{{ product.featured_image | image_url: width: 400 }}"
        alt="{{ product.title }}"
        class="mx-auto hover:scale-105 transition duration-300"
        height=""
        width=""
      >
    {% endif %}

    <h2 class="mt-4 text-2xl font-semibold">Products</h2>
  </div>

  <div class="collection px-6 lg:px-16 my-10 max-w-7xl mx-auto">
    <div class="flex justify-between items-center mb-10">
      <div></div>

      <div class="flex items-center gap-6 text-sm">
        <div>
          Sort by:
          <select class="border-none bg-transparent font-medium">
            <option>Best selling</option>
            <option>Price: Low to High</option>
            <option>Price: High to Low</option>
          </select>
        </div>
        <div class="text-gray-600">{{ collection.products_count }} Products</div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-10">
      <aside class="space-y-8 text-sm">
        <div>
          <h3 class="font-semibold mb-3">Availability</h3>
          <div class="space-y-2">
            <label class="flex items-center gap-2">
              <input type="checkbox" class="accent-black">
              In stock (3)
            </label>
            <label class="flex items-center gap-2">
              <input type="checkbox" class="accent-black">
              Out of stock (1)
            </label>
          </div>
        </div>

        <div>
          <h3 class="font-semibold mb-3">Price</h3>
          <p class="text-gray-500 mb-3">
            The highest price is {{ collection.products | map: 'price' | sort | last | money }}
          </p>
          <div class="flex gap-3">
            <input type="text" placeholder="$ From" class="border px-3 py-2 w-full">
            <input type="text" placeholder="To" class="border px-3 py-2 w-full">
          </div>
        </div>

        <div>
          <h3 class="font-semibold mb-3">Color</h3>
          <div class="flex gap-3">
            <span class="w-6 h-6 rounded-full bg-gray-300 border"></span>
            <span class="w-6 h-6 rounded-full bg-orange-300 border"></span>
            <span class="w-6 h-6 rounded-full bg-yellow-400 border"></span>
          </div>
        </div>

        <div>
          <h3 class="font-semibold mb-3">Carat</h3>
          <div class="space-y-2">
            <label class="flex items-center gap-2"> <input type="checkbox"> 18KT (1) </label>
            <label class="flex items-center gap-2"> <input type="checkbox"> 22KT (1) </label>
            <label class="flex items-center gap-2"> <input type="checkbox"> 24KT (1) </label>
          </div>
        </div>

        <div>
          <h3 class="font-semibold mb-3">Product type</h3>
          <div class="space-y-2">
            <label class="flex items-center gap-2"> <input type="checkbox"> Necklace (1) </label>
            <label class="flex items-center gap-2"> <input type="checkbox"> Rings (2) </label>
          </div>
        </div>

        <div>
          <h3 class="font-semibold mb-3">Brand</h3>
          <div class="space-y-2">
            <label class="flex items-center gap-2"> <input type="checkbox"> Florida Diamond (1) </label>
            <label class="flex items-center gap-2"> <input type="checkbox"> Gold Ring (2) </label>
          </div>
        </div>
      </aside>

      <div class="lg:col-span-3">
        {% if collection.products.size > 0 %}
          <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
            {% for product in collection.products %}
              <a href="{{ product.url }}" class="group text-center">
                <div class="bg-gray-50 p-2 mb-4">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 400 }}"
                      alt="{{ product.title }}"
                      class="mx-auto group-hover:scale-105 transition duration-300"
                      height=""
                      width=""
                    >
                  {% endif %}
                </div>

                <p class="text-xs uppercase tracking-widest text-gray-500 mb-1">
                  {{ product.vendor }}
                </p>

                <h3 class="text-sm font-medium mb-2">
                  {{ product.title }}
                </h3>

                <div class="flex justify-center gap-1 mb-2 text-yellow-400 text-sm">★ ★ ★ ★ ★</div>

                <p class="text-orange-500 font-semibold">
                  {{ product.price | money }}
                </p>
              </a>
            {% endfor %}
          </div>
        {% else %}
          <p>No products found.</p>
        {% endif %}
      </div>
    </div>
  </div>
</section>
