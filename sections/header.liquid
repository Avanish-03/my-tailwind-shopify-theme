<header
  class="site-header"
  style="
    background-color: {{ section.settings.bg_color }};
    padding: {{ settings.padding }}px 0;
  "
>
  <div class="header-inner">

    <div class="logo">
      {% if settings.logo != blank %}
        <img
          src="{{ settings.logo | image_url }}"
          style="max-width: {{ settings.logo_width }}px;"
          alt="{{ settings.brand_name }}"
          height=""
          width=""
        >
      {% else %}
        <span>{{ settings.brand_name }}</span>
      {% endif %}
    </div>

    {% if linklists['main-menu'] != blank %}
      <nav class="navigation">
        <ul>
          {% for link in linklists['main-menu'].links %}
            <li>
              <a
                href="{{ link.url }}"
                style="color: {{ settings.text_color }};"
              >
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    {% endif %}

  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#050505"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Menu text color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Header padding",
      "min": 10,
      "max": 40,
      "step": 2,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo width",
      "min": 80,
      "max": 250,
      "step": 10,
      "default": 150,
      "unit": "px"
    }
  ]
}
{% endschema %}
