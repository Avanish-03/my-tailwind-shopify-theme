<section class="my-12">
  <div class=" mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

      <!-- LEFT BIG BANNER -->
      <a href="{{ section.settings.banner1_link }}"
         class="relative overflow-hidden group min-h-[500px]">

        <img
          src="{{ section.settings.banner1_image | image_url }}"
          alt=""
          class="w-full h-full object-cover group-hover:scale-105 transition duration-500"
          height=""
          width=""
        />

        <div class="absolute inset-0 flex items-center">
          <div class="ml-10 max-w-md">
            <p class="text-xs uppercase tracking-widest mb-2">
              {{ section.settings.banner1_subtitle }}
            </p>
            <h2 class="text-3xl font-semibold mb-4">
              {{ section.settings.banner1_title }}
            </h2>
            <span class="underline text-sm">Shop Now</span>
          </div>
        </div>
      </a>

      <!-- RIGHT COLUMN -->
      <div class="grid grid-rows-2 gap-6">

        <!-- BANNER 2 -->
        <a href="{{ section.settings.banner2_link }}"
           class="relative overflow-hidden group min-h-[240px]">

          <img
            src="{{ section.settings.banner2_image | image_url }}"
            alt=""
            class="w-full h-full object-cover group-hover:scale-105 transition duration-500"
            height=""
            width=""
          />

          <div class="absolute inset-0 flex items-center">
            <div class="ml-8 max-w-sm">
              <p class="text-xs uppercase tracking-widest mb-2">
                {{ section.settings.banner2_subtitle }}
              </p>
              <h2 class="text-2xl font-semibold mb-3">
                {{ section.settings.banner2_title }}
              </h2>
              <span class="underline text-sm">Shop Now</span>
            </div>
          </div>
        </a>

        <!-- BANNER 3 -->
        <a href="{{ section.settings.banner3_link }}"
           class="relative overflow-hidden group min-h-[240px]">

          <img
            src="{{ section.settings.banner3_image | image_url }}"
            alt=""
            class="w-full h-full object-cover group-hover:scale-105 transition duration-500"
            height=""
            width=""
          />

          <div class="absolute inset-0 flex items-center">
            <div class="ml-8 max-w-sm">
              <p class="text-xs uppercase tracking-widest mb-2">
                {{ section.settings.banner3_subtitle }}
              </p>
              <h2 class="text-2xl font-semibold mb-3">
                {{ section.settings.banner3_title }}
              </h2>
              <span class="underline text-sm">Shop Now</span>
            </div>
          </div>
        </a>

      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Jewelry Banner",
  "settings": [
    { "type": "image_picker", "id": "banner1_image", "label": "Banner 1 Image" },
    { "type": "text", "id": "banner1_subtitle", "label": "Banner 1 Subtitle", "default": "Diamond Ring" },
    { "type": "text", "id": "banner1_title", "label": "Banner 1 Title", "default": "Yellow Gold & Diamond Ring" },
    { "type": "url", "id": "banner1_link", "label": "Banner 1 Link" },

    { "type": "image_picker", "id": "banner2_image", "label": "Banner 2 Image" },
    { "type": "text", "id": "banner2_subtitle", "label": "Banner 2 Subtitle", "default": "Diamond Bracelets" },
    { "type": "text", "id": "banner2_title", "label": "Banner 2 Title", "default": "Infinity Diamond Bracelet" },
    { "type": "url", "id": "banner2_link", "label": "Banner 2 Link" },

    { "type": "image_picker", "id": "banner3_image", "label": "Banner 3 Image" },
    { "type": "text", "id": "banner3_subtitle", "label": "Banner 3 Subtitle", "default": "Diamond Pendant" },
    { "type": "text", "id": "banner3_title", "label": "Banner 3 Title", "default": "Teardrop Diamond Pendant" },
    { "type": "url", "id": "banner3_link", "label": "Banner 3 Link" }
  ],
  "presets": [
    { "name": "Jewelry Banner" }
  ]
}
{% endschema %}
